<% provide :title, 'Help Requests' %>

<p><%= link_to 'Open a help request', new_help_request_path, :class => 'btn btn-primary' %></p>

<table class='table'>
  <thead>
    <tr>
      <th>Subject</th>
      <th>User</th>
      <th>Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <% @help_requests.each do |request| %>
    <tr>
      <td><%= link_to request.subject, request %></td>
      <td><%= request.user.email %></td>
      <td><%= request.created_at.localtime.strftime('%x') %></td>
      <% if request.closed? %>
        <td>CLOSED</td>
      <% else %>
        <td>OPEN</td>
      <% end %>
    </tr>
  <% end %>
</table>
