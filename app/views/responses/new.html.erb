<% provide :title, "Respond to #{@response.help_request.subject}" %>

<%= render :partial => 'layouts/errors', :locals => {:object => @response} %>

<%= form_for [@response.help_request, @response] do |f| %>
  <%= f.label :message %>
  <%= f.text_area :message %>
  <%= f.submit 'Submit', :class => 'btn btn-primary' %>
<% end %>
