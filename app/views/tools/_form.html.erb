
<%= render :partial => 'layouts/errors', :locals => {:object => @tool} %>

<%= form_for @tool do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :subject %>
  <%= f.collection_select(:subject_id, @subjects, :id, :name, :include_blank => true) if @subjects %>
  <%= link_to "Add Subject", new_subject_path, :class => "btn btn-mini" %>


  <%= f.label :type %>
  <%= f.collection_select(:type_id, @types, :id, :name, :include_blank => true) if @types %>
  <%= link_to "Add Type", new_subject_path, :class => "btn btn-mini" %>
        

  <%= f.label :level %>
  <%= f.collection_select(:level, Tool::LEVEL, :to_s, :to_s, :include_blank => true) %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>


  <%= f.submit "Save", :class => 'btn btn-primary' %>

  <% end %>