<%= render :partial => 'layouts/errors', :locals => {:object => definition} %>
  
<%= form_for [definition.word, definition] do |f| %>

  <%= f.label "Enter definition:" %>
  <%= f.text_area :text, :value => @word.current_definition %>
  
  <%= f.submit 'Submit', :class => 'btn btn-primary' %>
<% end %>
