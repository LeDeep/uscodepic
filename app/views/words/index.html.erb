<% provide :title, "Terms" %>

<%= button_to "Add a word", new_word_path, :method => "get", :class => 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Term</th>
      <th>Definition</th>
      <th></th>
    </tr>
  </thead>
  <% @words.each do |word| %>
    <tr>
      <% if word.definitions.count > 1 %>
        <td><%= link_to word.term, word_path(:id => word.id) %></td>
      <% else %>
        <td><%= word.term %></td>
      <% end %>
      <td><%= word.current_definition.text unless word.current_definition.nil? %></td>

      <td><%= link_to "Add a definition", new_word_definition_path(word), :class => 'btn btn-success' %></td>
    </tr>
  <% end %>
</table>
